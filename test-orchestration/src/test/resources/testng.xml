<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Automation Test Suite" verbose="1" parallel="false">

    <listeners>
        <listener class-name="com.playwright.framework.core.AllureTestListener"/>
    </listeners>

    <test name="API Tests">
        <packages>
            <package name="com.playwright.framework.api"/>
        </packages>
    </test>

    <test name="Web Tests">
        <packages>
            <package name="com.playwright.framework.web"/>
        </packages>
    </test>

    <test name="Mobile Tests">
        <packages>
            <package name="com.playwright.framework.mobile"/>
        </packages>
    </test>

</suite>